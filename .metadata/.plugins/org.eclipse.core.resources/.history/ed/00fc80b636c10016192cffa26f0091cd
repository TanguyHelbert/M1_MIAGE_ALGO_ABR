package proj;

import java.io.*;

public class TABR {

	private String fi;
	private int[] intervalle;
	private ArbreBinaireRecherche abr;

	public TABR(String fi) {
		this.fi = fi;
		analyseFichier();
	}
	
	private void analyseFichier(){
		this.intervalle = new int[2];
		this.abr = new ArbreBinaireRecherche();
		String ligne = "";
		String chaine = "";
		String[] interArbre;
		String inter = "";
		String[] valInter;
		String arbre = "";
		String[] valArbre;
		
		try{
			InputStream ips=new FileInputStream(this.fi); 
			InputStreamReader ipsr=new InputStreamReader(ips);
			BufferedReader br=new BufferedReader(ipsr);
			
			while ((ligne=br.readLine())!=null){
				interArbre = ligne.split(";");
				inter = interArbre[0];
				arbre = interArbre[1];
				
				valInter = inter.split(":");
				this.intervalle[0] = Integer.parseInt(valInter[0]);
				this.intervalle[1] = Integer.parseInt(valInter[1]);
							
				for (int i = 0 ; i < this.intervalle.length ; i++){
					System.out.println(this.intervalle[i]);					
				}
				
				valArbre = arbre.split(":");
				for (int i = 0 ; i < valArbre.length ; i++){
									
				} 
				System.out.println(arbre);
				chaine+=ligne+"\n";
			}
			br.close(); 
		} catch (Exception e){
			System.out.println(e.toString());
		}
	}	
}
